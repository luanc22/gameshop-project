extends layouts/main-layout.pug

block styles 
    link(rel='stylesheet', href='/css/game.css')

block content
    main
        if gms.length > 0
            .grid
                each game in gms
                    article.card.game-item
                        header.card__header 
                            h1.game__title #{game.title}
                        .card__image
                            img(src="https://assets.reedpopcdn.com/fifa-main.jpg/BROK/resize/1200x1200%3E/format/jpg/quality/70/fifa-main.jpg", alt="Fifa 23")
                        .card__content
                            h2.game__price R$ 250.00
                            p.game__description The new EA FIFA Game! 
                        .card__actions 
                            button.btn Add to Cart
        else 
            h1 No games to sell at this moment, come back later!