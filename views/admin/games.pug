extends ../layouts/main-layout.pug

block styles 
    link(rel='stylesheet', href='/css/game.css')

block content
    main
        if gms.length > 0
            .grid
                each game in gms
                    article.card.game-item
                        header.card__header 
                            h1.game__title #{game.title}
                        .card__image
                            img(src=game.imageUrl, alt=game.title)
                        .card__content
                            h2.game__price #{game.price}
                            p.game__description #{game.description} 
                            p.game__genre #{game.genre}
                        .card__actions 
                            a.btn(href='/admin/edit-game/' + game.id + '?edit=true') Edit
                            form(action='/admin/delete-game', method='POST')
                                input(type='hidden', value=game.id, name='gameId')#gameId
                                button.btn(type='submit') Delete
        else 
            h1 No games to sell at this moment, come back later!

